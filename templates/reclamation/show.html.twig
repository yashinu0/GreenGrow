{% extends 'basefeed.html.twig' %}

{% block title %}Détails de la réclamation{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        .chat-container {
            background: #f8f9fa;
            border-radius: 15px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
            padding: 20px;
            margin-bottom: 30px;
        }
        .chat-header {
            background: #28a745;
            color: white;
            padding: 15px 25px;
            border-radius: 10px 10px 0 0;
            margin: -20px -20px 20px -20px;
            display: flex;
            justify-content: space-between;
            align-items: center;
        }
        .chat-title {
            display: flex;
            align-items: center;
            gap: 15px;
            font-size: 1.2em;
        }
        .chat-title i {
            font-size: 1.4em;
        }
        .assistant-btn {
            display: flex;
            align-items: center;
            gap: 12px;
            background-color: rgba(255, 255, 255, 0.2);
            border: none;
            padding: 8px 20px;
            border-radius: 20px;
            color: white;
            text-decoration: none;
            transition: all 0.3s ease;
        }
        .assistant-btn:hover {
            background-color: rgba(255, 255, 255, 0.3);
            color: white;
            text-decoration: none;
        }
        .assistant-btn i {
            font-size: 1.2em;
        }
        .message-container {
            max-height: 400px;
            overflow-y: auto;
            padding: 15px;
            background: white;
            border-radius: 10px;
            margin-bottom: 20px;
        }
        .message {
            margin-bottom: 15px;
            padding: 10px 15px;
            border-radius: 10px;
            max-width: 80%;
        }
        .message.user {
            background: #e3f2fd;
            margin-left: auto;
        }
        .message.admin {
            background: #f5f5f5;
        }
        .message-time {
            font-size: 0.8em;
            color: #666;
            margin-top: 5px;
        }
        .btn-custom {
            padding: 10px 20px;
            border-radius: 25px;
            font-weight: 500;
            transition: all 0.3s;
        }
        .btn-custom:hover {
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(0,0,0,0.1);
        }
        .reclamation-info {
            background: white;
            padding: 20px;
            border-radius: 10px;
            box-shadow: 0 0 15px rgba(0,0,0,0.05);
            margin-bottom: 20px;
        }
        .status-badge {
            padding: 8px 15px;
            border-radius: 20px;
            font-weight: 500;
            color: white;
        }
        .bg-primary {
            background-color: #5c6369 !important;
        }
        .bg-warning {
            background-color: #ffc107 !important;
        }
        .bg-danger {
            background-color: #dc3545 !important;
        }
        .bg-success {
            background-color: #7ddb00 !important;
        }
        .btn-primary {
            color: #28a745;
            background-color: #007bff;
            background-image: none;
            border-color: #28a745;
        }
        .btn-primary:hover {
            color: #28a745;
            background-color: #0056b3;
            background-image: none;
            border-color: #28a745;
        }
        .btn-outline-primary {
            color: #28a745;
            background-color: #0056b3;
            background-image: none;
            border-color: #28a745;
        }
        .btn-outline-primary:hover {
            color: #28a745;
            background-color: #0056b3;
            background-image: none;
            border-color: #28a745;
        }
        .icon-spacing {
            margin-right: 15px;
        }
        .message-input-container {
            width: 100%;
            margin-top: 20px;
        }
        .message-input-container .input-group {
            width: 100%;
        }
        .info-title {
            display: flex;
            align-items: center;
            gap: 15px;
            margin-bottom: 10px;
            font-size: 1.1em;
            color: #333;
        }
        .info-title i {
            font-size: 1.2em;
            width: 24px;
            text-align: center;
        }
        .info-content {
            margin-left: 39px;
            margin-bottom: 25px;
        }
    </style>
{% endblock %}

{% block body %}
   {% include 'frontend/header.html.twig' %}
      
      <div style="height: 50px;"></div>

    <div class="container mt-5">
        <div class="row">
            <div class="col-md-12">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h1 class="h2">Réclamation #{{ reclamation.id }}</h1>
                    <a href="{{ path('app_reclamation_list') }}" class="btn btn-outline-primary btn-custom">
                        <i class="fas fa-list"></i>
                        <span>Voir toutes mes réclamations</span>
                    </a>
                </div>

                <div class="reclamation-info">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-title">
                                <i class="fas fa-box"></i>
                                <span>Produit concerné</span>
                            </div>
                            <div class="info-content">
                                {{ reclamation.produit ? reclamation.produit.nomProduit : 'Non spécifié' }}
                            </div>
                            
                            <div class="info-title">
                                <i class="fas fa-calendar-alt"></i>
                                <span>Date de soumission</span>
                            </div>
                            <div class="info-content">
                                {{ reclamation.dateRec|date('d/m/Y H:i') }}
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-title">
                                <i class="fas fa-tag"></i>
                                <span>Type de réclamation</span>
                            </div>
                            <div class="info-content">
                                {% set desc = reclamation.descriptionRec|lower %}
                                {% if 'défectueux' in desc %}
                                    <span class="badge bg-danger">Produit Défectueux</span>
                                {% elseif 'livraison' in desc %}
                                    <span class="badge bg-warning">Problème de Livraison</span>
                                {% elseif 'non conforme' in desc %}
                                    <span class="badge bg-info">Produit Non Conforme</span>
                                {% else %}
                                    <span class="badge bg-secondary">{{ reclamation.descriptionRec }}</span>
                                {% endif %}
                            </div>
                            
                            <div class="info-title">
                                <i class="fas fa-info-circle"></i>
                                <span>Statut</span>
                            </div>
                            <div class="info-content">
                                {% set status = reclamation.statutRec|replace({' ': '_'})|lower %}
                                <span class="status-badge
                                    {% if status == 'pending' %}bg-warning
                                    {% elseif status == 'in_progress' %}bg-primary
                                    {% elseif status == 'resolved' %}bg-success
                                    {% else %}bg-secondary
                                    {% endif %}">
                                    {% if status == 'pending' %}
                                        En attente
                                    {% elseif status == 'in_progress' %}
                                        En cours
                                    {% elseif status == 'resolved' %}
                                        Résolue
                                    {% else %}
                                        Fermée
                                    {% endif %}
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="chat-container">
                    <div class="chat-header">
                        <div class="chat-title">
                            <i class="fas fa-comments"></i>
                            <span>Contact avec le service client</span>
                        </div>
                        {% set status = reclamation.statutRec|replace({' ': '_'})|lower %}
                        {% if status == 'pending' or status == 'in_progress' %}
                            <a href="{{ path('app_reclamation_ai_assist', {'id': reclamation.id}) }}" class="assistant-btn">
                                <i class="fas fa-robot"></i>
                                <span>Assistant AI</span>
                            </a>
                        {% endif %}
                    </div>

                    <div class="message-container" id="messageContainer">
                        {% for message in reclamation.messages|sort((a, b) => a.sentAt <=> b.sentAt) %}
                            <div class="message {% if message.isFromAdmin %}admin{% else %}user{% endif %}">
                                <div class="message-content">{{ message.content }}</div>
                                <div class="message-time">{{ message.sentAt|date('d/m/Y H:i') }}</div>
                            </div>
                        {% endfor %}
                    </div>

                    {% if reclamation.statutRec != 'Résolu' and reclamation.statutRec != 'Fermé' %}
                        <div class="message-input-container">
                            {{ form_start(message_form) }}
                            <div class="input-group">
                                {{ form_widget(message_form.content, {'attr': {'class': 'form-control', 'placeholder': 'Votre message...'}}) }}
                                <button type="submit" class="btn btn-success" style="background-color: #28a745; border-color: #28a745;">
                                    <i class="fas fa-paper-plane me-3"></i>Envoyer
                                </button>
                            </div>
                            {{ form_end(message_form) }}
                        </div>
                    {% else %}
                        <div class="alert alert-info text-center">
                            <i class="fas fa-lock me-2"></i>
                            Cette réclamation est {{ reclamation.statutRec }}e. Vous ne pouvez plus envoyer de messages.
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const container = document.getElementById('messageContainer');
            container.scrollTop = container.scrollHeight;
        });
    </script>
    
    <div style="height: 50px;"></div>

    {% include 'frontend/footer.html.twig' %}
{% endblock %}