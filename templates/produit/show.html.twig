{% extends 'backend/indexbackend.html.twig' %}

{% block title %}Produit{% endblock %}

{% block content %}
    <h1>Produit</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ produit.id }}</td>
            </tr>
            <tr>
                <th>Quantite</th>
                <td>{{ produit.quantite }}</td>
            </tr>
            <tr>
                <th>Nom_produit</th>
                <td>{{ produit.nomProduit }}</td>
            </tr>
            <tr>
                <th>Description_produit</th>
                <td>{{ produit.descriptionProduit }}</td>
            </tr>
            <tr>
                <th>Prix_produit</th>
                <td>{{ produit.prixProduit }}</td>
            </tr>
            <tr>
                <th>Disponibilte_produit</th>
                <td>{{ produit.disponibilteProduit }}</td>
            </tr>
              <tr>
                <th>Rating</th>
                <td>{{ produit.rating }}</td>
            </tr>
            <tr>
                <th>Image_produit</th>
                <td>
                    {% if produit.imageProduit %}
                        <img src="{{ asset('uploads/images/' ~ produit.imageProduit) }}" alt="{{ produit.nomProduit }}" style="max-width: 100px;">
                    {% else %}
                        No image
                    {% endif %}
                </td>
            </tr>
        </tbody>
    </table>

    <a class="btn btn-secondary mt-3" href="{{ path('app_produit_index') }}">Back to list</a>
    <a class="btn btn-primary mt-3" href="{{ path('app_produit_edit', {'id': produit.id}) }}">Edit</a>

    {{ include('produit/_delete_form.html.twig') }}
{% endblock %}