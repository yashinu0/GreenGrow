{% extends 'melek.html.twig' %}

{% block title %}Index des Commandes{% endblock %}

{% block content %}
    <div class="delivery-dashboard">
        <div class="actions-bar glass-effect">
            <a href="{{ path('app_commande_new') }}" class="action-btn">
                <i class="fas fa-plus"></i>
                <span>Nouvelle Commande</span>
            </a>
            <a href="{{ path('app_commande_vocale') }}" class="action-btn voice-btn">
                <i class="fas fa-microphone"></i>
                <span>Commande Vocale</span>
            </a>
            <a href="{{ path('app_livreur_index') }}" class="action-btn driver-btn">
                <i class="fas fa-truck"></i>
                <span>Liste des Livreurs</span>
            </a>
        </div>

        {% if commandes|length > 0 %}
            {% for commande in commandes %}
                <div class="driver-card glass-effect">
                    <div class="driver-header">
                        <div class="driver-info">
                            <h2>Commande #{{ commande.idCommande }}</h2>
                            <span class="badge delivery-status" data-status="{{ commande.statueCommande }}">{{ commande.statueCommande }}</span>
                        </div>
                    </div>
                    <div class="delivery-details">
                        <div class="detail-item">
                            <i class="fas fa-calendar"></i>
                            <div>
                                <label>Date</label>
                                <span>{{ commande.dateCommande ? commande.dateCommande|date('d/m/Y H:i') : '' }}</span>
                            </div>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-euro-sign"></i>
                            <div>
                                <label>Montant</label>
                                <span>{{ commande.prixtotalCommande }} €</span>
                            </div>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-credit-card"></i>
                            <div>
                                <label>Paiement</label>
                                <span>{{ commande.modepaiementCommande }}</span>
                            </div>
                        </div>
                        <div class="detail-item">
                            <i class="fas fa-tasks"></i>
                            <div>
                                <label>Actions</label>
                                <div class="action-buttons">
                                    <a href="{{ path('app_commande_show', {'id_commande': commande.idCommande}) }}" class="btn-action">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('app_commande_edit', {'id_commande': commande.idCommande}) }}" class="btn-action">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <form method="post" action="{{ path('app_commande_delete', {'id_commande': commande.idCommande}) }}" 
                                          class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette commande ?');">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ commande.idCommande) }}">
                                        <button class="btn-action">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            {% endfor %}
        {% else %}
            <div class="empty-state glass-effect">
                <i class="fas fa-box-open fa-3x"></i>
                <h3>Aucune commande trouvée</h3>
                <p>Il n'y a pas encore de commandes enregistrées.</p>
            </div>
        {% endif %}
    </div>
{% endblock %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <style>
        .delivery-dashboard {
            padding: 2rem;
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(350px, 1fr));
            gap: 2rem;
            max-width: 1600px;
            margin: 0 auto;
        }

        .actions-bar {
            grid-column: 1 / -1;
            display: flex;
            gap: 1rem;
            padding: 1rem;
            margin-bottom: 1rem;
        }

        .action-btn {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.75rem 1.5rem;
            border-radius: 10px;
            color: white;
            text-decoration: none;
            font-weight: 500;
            transition: transform 0.2s ease;
            background: linear-gradient(135deg, #00b09b, #96c93d);
        }

        .action-btn i {
            color: white;
        }

        .voice-btn {
            background: linear-gradient(135deg, #6366f1, #a855f7);
        }

        .driver-btn {
            background: linear-gradient(135deg, #f59e0b, #ef4444);
        }

        .action-btn:hover {
            transform: translateY(-2px);
            color: white;
        }

        .action-btn i {
            font-size: 1.2rem;
        }

        .glass-effect {
            background: rgba(255, 255, 255, 0.9);
            backdrop-filter: blur(10px);
            border-radius: 20px;
            box-shadow: 0 8px 32px rgba(31, 38, 135, 0.15);
            border: 1px solid rgba(255, 255, 255, 0.18);
        }

        .driver-card {
            padding: 1.5rem;
            transition: transform 0.3s ease;
        }

        .driver-card:hover {
            transform: translateY(-5px);
        }

        .driver-header {
            display: flex;
            align-items: center;
            justify-content: space-between;
            margin-bottom: 2rem;
        }

        .driver-info h2 {
            margin: 0;
            font-size: 1.5rem;
            color: #2c3e50;
        }

        .badge {
            display: inline-block;
            padding: 0.5rem 1rem;
            border-radius: 20px;
            font-size: 0.875rem;
            font-weight: 500;
            margin-top: 0.5rem;
        }

        .delivery-status {
            background: linear-gradient(135deg, #00b09b, #96c93d);
            color: white;
        }

        .delivery-details {
            display: grid;
            grid-template-columns: repeat(2, 1fr);
            gap: 1.5rem;
        }

        .detail-item {
            display: flex;
            align-items: center;
            gap: 1rem;
            padding: 1rem;
            background: rgba(247, 248, 249, 0.8);
            border-radius: 12px;
        }

        .detail-item i {
            font-size: 1.5rem;
            color: #00b09b;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            background: rgba(0, 176, 155, 0.1);
            border-radius: 10px;
        }

        .detail-item div {
            display: flex;
            flex-direction: column;
        }

        .detail-item label {
            font-size: 0.875rem;
            color: #7f8c8d;
        }

        .detail-item span {
            font-weight: 600;
            color: #2c3e50;
        }

        .action-buttons {
            display: flex;
            gap: 0.5rem;
            margin-top: 0.5rem;
        }

        .btn-action {
            padding: 0.5rem;
            border-radius: 8px;
            color: white;
            background: linear-gradient(135deg, #00b09b, #96c93d);
            border: none;
            cursor: pointer;
            transition: transform 0.2s ease;
            text-decoration: none;
        }

        .btn-action:hover {
            transform: scale(1.1);
            color: white;
        }

        .btn-action i {
            color: white;
        }

        .empty-state {
            text-align: center;
            padding: 3rem;
            grid-column: 1 / -1;
        }

        .empty-state i {
            color: #95a5a6;
            margin-bottom: 1rem;
        }

        .empty-state h3 {
            color: #2c3e50;
            margin-bottom: 0.5rem;
        }

        .empty-state p {
            color: #7f8c8d;
        }

        /* Status colors */
        .delivery-status[data-status="en_preparation"] {
            background: linear-gradient(135deg, #f6d365, #fda085);
        }

        .delivery-status[data-status="en_route"] {
            background: linear-gradient(135deg, #00b09b, #96c93d);
        }

        .delivery-status[data-status="livree"] {
            background: linear-gradient(135deg, #4CAF50, #8BC34A);
        }

        .delivery-status[data-status="annulee"] {
            background: linear-gradient(135deg, #ff6b6b, #ff8e8e);
        }
    </style>
{% endblock %}
