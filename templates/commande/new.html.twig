{% extends 'base.html.twig' %}
{% block title %}Nouvelle Commande{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="card p-4 border-0 shadow-lg" style="background: linear-gradient(135deg, #E9F5E1, #F0F8FF); border-radius: 20px;">
            <h1 class="text-center mb-4 display-4 fw-bold" style="color: #2E8B57; text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.1);">
                <i class="fas fa-leaf me-2"></i>Créer une nouvelle commande
            </h1>

            <div class="card-body">
                {{ include('commande/_form.html.twig') }}
            </div>

            <div class="text-center mt-4">
                <a href="{{ path('app_commande_index') }}" class="btn btn-lg btn-outline-success" style="border-radius: 25px; color: #2E8B57; border-color: #2E8B57; transition: all 0.3s ease;">
                    <i class="fas fa-arrow-left me-2"></i>Retour à la liste
                </a>
            </div>
        </div>
    </div>

    <style>
        /* Effets modernes */
        .card {
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }
        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 12px 24px rgba(0, 0, 0, 0.15);
        }

        .btn-outline-success:hover {
            background-color: #2E8B57;
            color: white;
            transform: scale(1.05);
        }

        .form-control {
            border-radius: 12px;
            border: 2px solid #2E8B57;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }
        .form-control:focus {
            border-color: #8B4513;
            box-shadow: 0 0 8px rgba(46, 139, 87, 0.6);
        }

        h1 i {
            color: #8B4513;
            animation: float 3s ease-in-out infinite;
        }

        @keyframes float {
            0%, 100% {
                transform: translateY(0);
            }
            50% {
                transform: translateY(-10px);
            }
        }
    </style>
{% endblock %}
