{% extends 'base.html.twig' %}

{% block title %}Commande{% endblock %}

{% block body %}
    <div class="container mt-5">
        <div class="row justify-content-center">
            <div class="col-lg-8 col-md-10 col-sm-12">
                <div class="card shadow-lg border-success rounded">
                    <div class="card-header bg-success text-white text-center">
                        <h3 class="mb-0">Détails de la Commande</h3>
                    </div>
                    <div class="card-body">
                        <table class="table table-bordered table-striped">
                            <tbody>
                                <tr>
                                    <th scope="row">ID Commande</th>
                                    <td>{{ commande.idCommande }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Statue de la Commande</th>
                                    <td>
                                        <span class="text-dark">
                                            {{ commande.statueCommande }}
                                        </span>
                                    </td>
                                </tr>
                                <tr>
                                    <th scope="row">Date de la Commande</th>
                                    <td>{{ commande.dateCommande ? commande.dateCommande|date('Y-m-d H:i:s') : '' }}</td>
                                </tr>
                                <tr>
                                    <th scope="row">Prix Total</th>
                                    <td class="font-weight-bold text-success">{{ commande.prixtotalCommande }} TND</td>
                                </tr>
                                <tr>
                                    <th scope="row">Mode de Paiement</th>
                                    <td>{{ commande.modepaiementCommande }}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="card-footer text-center" style="background-color: #d4e4d2;">
                        <a href="{{ path('app_commande_index') }}" class="btn btn-outline-success btn-lg m-2">
                            <i class="mdi mdi-arrow-left"></i> Retourner à la liste
                        </a>
                        <a href="{{ path('app_commande_edit', {'id_commande': commande.idCommande}) }}" class="btn btn-success btn-lg m-2">
                            <i class="mdi mdi-pencil"></i> Modifier la commande
                        </a>
                        <a href="{{ path('app_commande_paiement', {'id_commande': commande.idCommande}) }}" class="btn btn-primary btn-lg m-2">
                            <i class="mdi mdi-cash-multiple"></i> Procéder au paiement
                        </a>
                        <a href="/livraison/{{ commande.idCommande }}/livreur" class="btn btn-info btn-lg m-2">
                            <i class="mdi mdi-truck-delivery"></i> Suivre la livraison
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Confirmation de suppression -->
    {{ include('commande/_delete_form.html.twig') }}
{% endblock %}
