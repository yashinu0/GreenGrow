{% extends 'base.html.twig' %}

{% block title %}Modifier le Livreur{% endblock %}

{% block body %}
    <div class="container-fluid">
        <div class="row mb-4">
            <div class="col-12">
                <div class="page-title">
                    <h1>Modifier le Livreur</h1>
                    <div class="action-buttons">
                        <a href="{{ path('app_livreur_index') }}" class="btn btn-secondary">
                            <i class="fas fa-arrow-left"></i> Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <div class="row">
            <div class="col-md-8 col-lg-6 mx-auto">
                <div class="card">
                    <div class="card-body">
                        {{ include('livreur/_form.html.twig', {'button_label': 'Mettre à jour'}) }}
                    </div>
                </div>

                <div class="delete-section mt-4">
                    {{ include('livreur/_delete_form.html.twig') }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .container-fluid {
            padding: 2rem;
            background-color: #f8f9fa;
            min-height: 100vh;
        }

        .page-title {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        .page-title h1 {
            margin: 0;
            color: #2c3e50;
            font-size: 1.8rem;
            font-weight: 600;
        }

        .card {
            border: none;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.05);
        }

        .card-body {
            padding: 2rem;
        }

        .delete-section {
            text-align: center;
        }

        /* Form Styling */
        .nature-form {
            max-width: 100%;
        }

        .form-fields {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .form-group {
            margin: 0;
            display: flex;
            gap: 1rem;
            align-items: flex-start;
        }

        .field-icon {
            width: 40px;
            height: 40px;
            background: #f8f9fa;
            border-radius: 8px;
            display: flex;
            align-items: center;
            justify-content: center;
            color: #4361ee;
        }

        .field-content {
            flex: 1;
        }

        .form-label {
            display: block;
            margin-bottom: 0.5rem;
            color: #2c3e50;
            font-weight: 500;
        }

        .nature-input {
            width: 100%;
            padding: 0.75rem 1rem;
            border: 1px solid #e2e8f0;
            border-radius: 8px;
            transition: all 0.3s ease;
        }

        .nature-input:focus {
            border-color: #4361ee;
            box-shadow: 0 0 0 3px rgba(67, 97, 238, 0.1);
        }

        .form-actions {
            margin-top: 2rem;
            display: flex;
            justify-content: flex-end;
        }

        .btn-custom.btn-nature {
            background: #4361ee;
            color: white;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            border: none;
            display: flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-custom.btn-nature:hover {
            background: #3a0ca3;
            transform: translateY(-1px);
        }

        .btn-secondary {
            background: #64748b;
            border: none;
            padding: 0.75rem 1.5rem;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .btn-secondary:hover {
            background: #475569;
        }

        /* Delete button styling */
        .btn-delete {
            background: #ef4444;
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 8px;
            display: inline-flex;
            align-items: center;
            gap: 0.5rem;
            font-weight: 500;
            transition: all 0.3s ease;
        }

        .btn-delete:hover {
            background: #dc2626;
            transform: translateY(-1px);
        }

        /* Responsive adjustments */
        @media (max-width: 768px) {
            .container-fluid {
                padding: 1rem;
            }

            .page-title {
                flex-direction: column;
                gap: 1rem;
                text-align: center;
            }

            .card-body {
                padding: 1.5rem;
            }

            .form-group {
                flex-direction: column;
            }

            .field-icon {
                margin: 0 auto;
            }

            .field-content {
                width: 100%;
            }
        }
    </style>
{% endblock %}
