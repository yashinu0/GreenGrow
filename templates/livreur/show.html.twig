{% extends 'base.html.twig' %}

{% block title %}D√©tails du Livreur{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <style>
        :root {
            --color-forest: #2D5A27;
            --color-sage: #8BA888;
            --color-moss: #B8D5B8;
            --color-earth: #4A3B22;
            --color-sand: #E8DCC4;
        }

        body {
            background: linear-gradient(135deg, var(--color-moss) 0%, var(--color-sand) 100%);
            min-height: 100vh;
        }

        .profile-card {
            background: rgba(255, 255, 255, 0.95);
            border-radius: 20px;
            box-shadow: 0 15px 35px rgba(45, 90, 39, 0.2);
            padding: 2.5rem;
            margin: 2rem auto;
            max-width: 800px;
            position: relative;
            overflow: hidden;
        }

        .profile-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 8px;
            background: linear-gradient(90deg, var(--color-forest), var(--color-sage));
        }

        .profile-header {
            text-align: center;
            margin-bottom: 2.5rem;
            padding-bottom: 1.5rem;
            border-bottom: 2px solid var(--color-moss);
            position: relative;
        }

        .profile-header::after {
            content: 'üçÉ';
            position: absolute;
            bottom: -15px;
            left: 50%;
            transform: translateX(-50%);
            background: white;
            padding: 0 15px;
            font-size: 1.5rem;
        }

        .profile-photo {
            width: 180px;
            height: 180px;
            border-radius: 50%;
            object-fit: cover;
            margin: 0 auto 1.5rem;
            border: 6px solid white;
            box-shadow: 0 0 25px rgba(139, 168, 136, 0.3),
                        inset 0 0 15px rgba(45, 90, 39, 0.2);
            position: relative;
            background: var(--color-sand);
        }

        .profile-photo img {
            border-radius: 50%;
            transition: transform 0.3s ease;
        }

        .profile-photo:hover img {
            transform: scale(1.05);
        }

        .display-5 {
            color: var(--color-forest);
            font-weight: 600;
            margin-bottom: 0.5rem;
        }

        .info-group {
            margin-bottom: 1.5rem;
            padding: 1.2rem;
            background: linear-gradient(to right bottom, rgba(184, 213, 184, 0.1), rgba(232, 220, 196, 0.2));
            border-radius: 15px;
            border: 1px solid rgba(139, 168, 136, 0.2);
            transition: transform 0.3s ease, box-shadow 0.3s ease;
        }

        .info-group:hover {
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(45, 90, 39, 0.1);
        }

        .info-label {
            color: var(--color-forest);
            font-weight: 600;
            font-size: 0.95rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .info-content {
            color: var(--color-earth);
            font-size: 1.1rem;
            margin-top: 0.5rem;
        }

        .action-buttons {
            display: flex;
            gap: 1.5rem;
            justify-content: center;
            margin-top: 2.5rem;
        }

        .btn-custom {
            padding: 0.7rem 2rem;
            border-radius: 30px;
            text-decoration: none;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            z-index: 1;
        }

        .btn-custom::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(45deg, var(--color-forest), var(--color-sage));
            opacity: 0;
            z-index: -1;
            transition: opacity 0.3s ease;
        }

        .btn-custom:hover::before {
            opacity: 1;
        }

        .btn-custom:hover {
            color: white !important;
            transform: translateY(-3px);
            box-shadow: 0 5px 15px rgba(45, 90, 39, 0.2);
        }

        .btn-outline-nature {
            color: var(--color-forest);
            border: 2px solid var(--color-forest);
        }

        .btn-nature {
            background: var(--color-forest);
            color: white;
            border: none;
        }

        .icon-nature {
            color: var(--color-forest);
            font-size: 1.2rem;
            margin-right: 0.5rem;
        }

        /* Animation pour les ic√¥nes */
        .fas {
            transition: transform 0.3s ease;
        }

        .info-group:hover .fas {
            transform: scale(1.2);
        }
    </style>
{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="profile-card">
            <div class="profile-header">
                <div class="profile-photo">
                    {% if livreur.photoLivreur %}
                        <img src="{{ asset(livreur.photoLivreur) }}" alt="Photo de {{ livreur.nomLivreur }}" class="img-fluid">
                    {% else %}
                        <img src="{{ asset('images/default-profile.png') }}" alt="Photo par d√©faut" class="img-fluid">
                    {% endif %}
                </div>
                <h1 class="display-5">{{ livreur.nomLivreur }} {{ livreur.prenomLivreur }}</h1>
                <p style="color: var(--color-sage);">Livreur ID: #{{ livreur.id }}</p>
            </div>

            <div class="row">
                <div class="col-md-6">
                    <div class="info-group">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-leaf icon-nature"></i>
                            <span class="info-label">Nom complet</span>
                        </div>
                        <div class="info-content">{{ livreur.nomLivreur }} {{ livreur.prenomLivreur }}</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="info-group">
                        <div class="d-flex align-items-center mb-2">
                            <i class="fas fa-phone icon-nature"></i>
                            <span class="info-label">T√©l√©phone</span>
                        </div>
                        <div class="info-content">{{ livreur.numeroLivreur }}</div>
                    </div>
                </div>
            </div>

            <div class="info-group mt-3">
                <div class="d-flex align-items-center mb-2">
                    <i class="fas fa-map-marker-alt icon-nature"></i>
                    <span class="info-label">Adresse</span>
                </div>
                <div class="info-content">{{ livreur.addresseLivreur }}</div>
            </div>

            <div class="action-buttons">
                <a href="{{ path('app_livreur_index') }}" class="btn btn-custom btn-outline-nature">
                    <i class="fas fa-arrow-left me-2"></i>Retour
                </a>
                <a href="{{ path('app_livreur_edit', {'id': livreur.id}) }}" class="btn btn-custom btn-nature">
                    <i class="fas fa-edit me-2"></i>Modifier
                </a>
                {{ include('livreur/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
