    <style>
        /* Styles for alert badge and cards */
        .navbar-list li {
            position: relative;
        }
        
        .alert-badge {
            position: absolute;
            top: -8px;
            right: -8px;
            background-color: #ff4d4d;
            color: white;
            border-radius: 50%;
            width: 20px;
            height: 20px;
            display: flex;
            justify-content: center;
            align-items: center;
            font-size: 12px;
            font-weight: bold;
        }
        
        .status-summary {
            background-color: #e8f5e9;
            color: #2e7d32;
            border-left: 5px solid #4caf50;
            font-weight: bold;
        }
        
        .status-summary.critical {
            background-color: #ffebee;
            color: #c62828;
            border-left: 5px solid #f44336;
        }
        
        .alert-card {
            background-color: #fff3e0;
            border-left: 5px solid #ff9800;
            border-radius: 8px;
            padding: 15px;
            margin-bottom: 15px;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }
        
        .alert-card h3 {
            color: #e65100;
            margin-top: 0;
            margin-bottom: 10px;
        }
        
        .recommendation {
            margin-top: 5px;
            padding-left: 20px;
            position: relative;
        }
        
        .recommendation:before {
            content: "•";
            position: absolute;
            left: 5px;
            color: #ff9800;
        }
        
        .add-plant-btn {
            background-color: #0e2903;
            color: white;
            border: none;
            border-radius: 25px;
            padding: 10px 20px;
            cursor: pointer;
            margin-top: 20px;
        }
    </style>

    <script>
        // Load data and render alerts on page load
        document.addEventListener("DOMContentLoaded", function () {
            displayAlerts();
            updateAlertBadge();
        });

        // Update alert badge count
        function updateAlertBadge() {
            const savedPlants = JSON.parse(localStorage.getItem("userPlants")) || [];
            const criticalPlants = savedPlants.filter(plant => plant.status === "critical");
            const badgeElement = document.getElementById("alert-badge");
            
            if (criticalPlants.length > 0) {
                badgeElement.textContent = criticalPlants.length;
                badgeElement.style.display = "flex";
            } else {
                badgeElement.style.display = "none";
            }
        }

        // Display alerts for critical plants
        async function displayAlerts() {
            const savedPlants = JSON.parse(localStorage.getItem("userPlants")) || [];
            const criticalPlants = savedPlants.filter(plant => plant.status === "critical");
            const alertCardsContainer = document.getElementById("alert-cards-container");
            const statusSummary = document.getElementById("status-summary");

            // Clear existing content
            alertCardsContainer.innerHTML = "";
            statusSummary.innerHTML = "";

            if (criticalPlants.length === 0) {
                statusSummary.className = "status-summary";
                statusSummary.textContent = "No critical alerts. All plants are in good condition!";
                return;
            }

            // Update status summary
            statusSummary.className = "status-summary critical";
            statusSummary.textContent = `You have ${criticalPlants.length} critical plant(s) that need attention.`;

            // Add alert cards for each critical plant
            criticalPlants.forEach(plant => {
                const plantRecommendations = JSON.parse(localStorage.getItem("plantRecommendations")) || {};
                const recommendations = plantRecommendations[plant.name]?.recommendations || [];

                const alertCard = document.createElement("div");
                alertCard.className = "alert-card";
                alertCard.innerHTML = `
                    <h3>${plant.name}</h3>
                    <p>${plant.statusText}</p>
                    <div class="recommendations">
                        ${recommendations.map(rec => `<p class="recommendation">${rec}</p>`).join("")}
                    </div>
                `;
                alertCardsContainer.appendChild(alertCard);

                // Save alert to the backend
                
            });
        }
    </script>
