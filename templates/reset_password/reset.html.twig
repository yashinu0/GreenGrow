{# templates/reset_password/reset.html.twig #}
{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        /* Custom CSS */
        body {
            background-color: #f5f5f5;
            min-height: 100vh;
            display: flex;
            flex-direction: column;
            justify-content: center;
            padding: 20px;
        }

        .reset-container {
            max-width: 500px;
            margin: 0 auto;
            width: 100%;
        }

        .reset-card {
            background: white;
            padding: 2.5rem;
            border-radius: 12px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }

        .reset-title {
            color: #1a365d;
            text-align: center;
            margin-bottom: 2rem;
            font-size: 2.2rem;
            font-weight: 700;
            letter-spacing: -0.5px;
        }

        .form-group {
            margin-bottom: 1.8rem;
        }

        .form-label {
            display: block;
            margin-bottom: 0.6rem;
            color: #2d3748;
            font-weight: 500;
            font-size: 0.95rem;
        }

        .form-input {
            width: 100%;
            padding: 0.9rem;
            border: 2px solid #e2e8f0;
            border-radius: 8px;
            font-size: 1rem;
            transition: all 0.3s ease;
        }

        .form-input:focus {
            outline: none;
            border-color: #4299e1;
            box-shadow: 0 0 0 4px rgba(66, 153, 225, 0.15);
        }

        .reset-button {
            width: 100%;
            padding: 1rem;
    background-color: rgb(59, 136, 45);
            color: white;
            border: none;
            border-radius: 8px;
            font-size: 1.05rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            margin-top: 1rem;
        }

        .reset-button:hover {
    background-color: rgb(13, 85, 0);
            transform: translateY(-1px);
        }

        /* Error Handling */
        .form-error {
            color: #e53e3e;
            font-size: 0.9rem;
            margin-top: 0.4rem;
            display: block;
        }

        .form-input.error {
            border-color: #e53e3e;
        }

        /* Responsive Design */
        @media (max-width: 576px) {
            .reset-card {
                padding: 1.8rem;
            }
            
            .reset-title {
                font-size: 1.8rem;
            }
            
            .form-input {
                padding: 0.8rem;
            }
        }

        /* Additional Helpers */
        .text-center {
            text-align: center;
        }
        
        .mt-3 {
            margin-top: 1.5rem;
        }
    </style>
{% endblock %}

{% block body %}
<div class="reset-container">
    <div class="reset-card">
        <h1 class="reset-title">ðŸ”‘ Reset Password</h1>
        
        {{ form_start(resetForm) }}
            <div class="form-group">
                {{ form_label(resetForm.plainPassword.first, 'New Password', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(resetForm.plainPassword.first, {'attr': {'class': 'form-input' ~ (resetForm.plainPassword.first.vars.errors ? ' error' : '')}}) }}
                {{ form_errors(resetForm.plainPassword.first, {'attr': {'class': 'form-error'}}) }}
            </div>

            <div class="form-group">
                {{ form_label(resetForm.plainPassword.second, 'Repeat Password', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(resetForm.plainPassword.second, {'attr': {'class': 'form-input' ~ (resetForm.plainPassword.second.vars.errors ? ' error' : '')}}) }}
            </div>

            <button type="submit" class="reset-button">Reset Password</button>
        {{ form_end(resetForm) }}

        <div class="mt-3 text-center">
            <small>Remembered your password? <a href="{{ path('app_login') }}">Login here</a></small>
        </div>
    </div>
</div>
{% endblock %}