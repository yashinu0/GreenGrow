{% extends 'base.html.twig' %}

{% block title %}Products{% endblock %}

{% block css %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-steps/1.1.0/jquery.steps.min.css">
    
    <style>
        .wizard h2 {
            display: none;
        }
        .container-form {
            max-width: 800px;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

        .input-wrapper {
            position: relative;
            margin: 15px 0;
        }

        .input-wrapper i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
        }

        .icon-left {
            padding-left: 40px !important;
            height: 45px;
            width: 100%;
            border: 2px solid #e0e0e0;
            border-radius: 5px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .icon-left:focus {
            border-color: #30880D;
            box-shadow: 0 0 5px rgba(52,152,219,0.3);
        }

        .password-match-error {
            color: #dc3545;
            font-size: 0.875em;
            display: none;
        }
        a {
            color: #30880D;
        }
         .btn-custom {
            background-color: #30880D;
            border-color: #30880D;
            color:black;
        }
        .btn-custom:hover {
            background-color:rgb(45, 156, 1);
            border-color: #266a0a;
        }

        .card {
            height: 100%;
            display: flex;
            flex-direction: column;
        }

        .card-img-top {
            height: 200px;
            object-fit: cover;
            width: 100%;
            background-color: #f8f9fa;
        }

        .card-img-container {
            position: relative;
            height: 200px;
            overflow: hidden;
            background-color: #f8f9fa;
        }

        .card-img-container img {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .card-body {
            flex: 1;
            display: flex;
            flex-direction: column;
        }

        .card-title {
            flex: 0 1 auto;
        }

        .card-text {
            flex: 1 1 auto;
        }

        .btn-custom {
            flex: 0 1 auto;
        }

        .rating i {
            color: #ddd;
            cursor: pointer;
        }

        .rating i.selected {
            color: #ffcc00;
        }
    </style>
{% endblock %}

{% block section %}
<div class="container-form">
    <h1>Products</h1>

    <div class="mb-4">
        <input type="text" id="search" class="form-control" placeholder="Search for products...">
    </div>

    <div class="row" id="product-list">
        {% for produit in produits %}
            <div class="col-md-4 mb-4 product-item">
                <div class="card">
                    <div class="card-img-container">
                        {% if produit.imageProduit and file_exists('public/images/' ~ produit.imageProduit) %}
                            <img src="{{ asset('images/' ~ produit.imageProduit) }}" class="card-img-top" alt="{{ produit.nomProduit }}" onerror="this.src='{{ asset('images/no-image.png') }}'">
                        {% else %}
                            <img src="{{ asset('images/no-image.png') }}" class="card-img-top" alt="No image">
                        {% endif %}
                    </div>
                    <div class="card-body">
                        <h5 class="card-title">{{ produit.nomProduit }}</h5>
                        <p class="card-text">{{ produit.descriptionProduit }}</p>
                        <p class="card-text"><strong>Price:</strong> {{ produit.prixProduit }}</p>
                        <p class="card-text"><strong>Availability:</strong> {{ produit.disponibilteProduit }}</p>
                        <div class="rating" data-product-id="{{ produit.id }}">
                            <i class="fas fa-star" data-value="1"></i>
                            <i class="fas fa-star" data-value="2"></i>
                            <i class="fas fa-star" data-value="3"></i>
                            <i class="fas fa-star" data-value="4"></i>
                            <i class="fas fa-star" data-value="5"></i>
                        </div>
                        <a href="{{ path('app_produitss_show', {'id': produit.id}) }}" class="btn btn-custom mt-auto">Show</a>
                    </div>
                </div>
            </div>
        {% else %}
            <div class="col-12">
                <p>No products found</p>
            </div>
        {% endfor %}
    </div>
</div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-steps/1.1.0/jquery.steps.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script>
        $(document).ready(function() {
            $('.rating i').on('click', function() {
                var rating = $(this).data('value');
                var productId = $(this).parent().data('id');
                
                // Highlight the selected stars
                $(this).siblings().removeClass('selected');
                $(this).addClass('selected').prevAll().addClass('selected');

                // Send the rating to the server
                $.ajax({
                    url: '{{ path('app_produitss_rate') }}',
                    method: 'POST',
                    data: {
                        rating: rating,
                        productId: productId
                    },
                    success: function(response) {
                        alert('Rating saved successfully!');
                    },
                    error: function(error) {
                        alert('Error saving rating.');
                    }
                });
            });

            // Search functionality
            $('#search').on('keyup', function() {
                var query = $(this).val().toLowerCase();
                $('.product-item').each(function() {
                    var productName = $(this).find('.card-title').text().toLowerCase();
                    if (productName.includes(query)) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            });
        });
    </script>
{% endblock %}