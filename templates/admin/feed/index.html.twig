{% extends 'backend/indexbackend.html.twig' %}

{% block css %}
    {{ parent() }}
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" />
    <link rel="stylesheet" href="{{ asset('css/mdb.min.css') }}" />
    <style>
        .card {
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
            border-radius: 8px;
            border: none;
        }
        .card-header {
            background-color: #006400;
            color: white;
            border-radius: 8px 8px 0 0;
        }
        .btn-info {
            background-color: #006400;
            border-color: #006400;
            color: white;
        }
        .btn-info:hover {
            background-color: #004d00;
            border-color: #004d00;
        }
        .badge {
            padding: 8px 12px;
            border-radius: 20px;
            font-weight: 500;
        }
        .table thead th {
            background-color: #f8f9fa;
            border-bottom: 2px solid #006400;
        }
        .breadcrumb-item.active {
            color: #006400;
        }
        .alert {
            border-radius: 8px;
            border: none;
        }
    </style>
{% endblock %}

{% block title %}Administration des Feedbacks{% endblock %}

{% block content %}
<div class="container-fluid px-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="mt-4">Gestion des Feedbacks</h1>
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb mb-0">
                <li class="breadcrumb-item"><a href="#" class="text-decoration-none">Dashboard</a></li>
                <li class="breadcrumb-item active" aria-current="page">Feedbacks</li>
            </ol>
        </nav>
    </div>
    
    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="fas fa-check-circle me-2"></i>{{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}
    
    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-table me-1"></i>
                    Liste des messages reçus
                </div>
                <div class="d-flex gap-2">
                    <button class="btn btn-sm btn-light" id="refreshTable">
                        <i class="fas fa-sync-alt"></i> Actualiser
                    </button>
                </div>
            </div>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table id="datatablesSimple" class="table table-striped table-hover align-middle">
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Nom</th>
                            <th>Email</th>
                            <th>Sujet</th>
                            <th>Date</th>
                            <th>Statut</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for feed in feeds %}
                        <tr>
                            <td>{{ feed.id }}</td>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="avatar-sm bg-light rounded-circle me-2">
                                        <span class="text-dark">{{ feed.nameFeed|first|upper }}</span>
                                    </div>
                                    {{ feed.nameFeed }}
                                </div>
                            </td>
                            <td>
                                <a href="mailto:{{ feed.emailFeed }}" class="text-decoration-none">
                                    {{ feed.emailFeed }}
                                </a>
                            </td>
                            <td>{{ feed.subjectFeed }}</td>
                            <td>
                                <span class="text-muted">
                                    <i class="far fa-clock me-1"></i>
                                    {{ feed.dateFeed|date('d/m/Y H:i') }}
                                </span>
                            </td>
                            <td>
                                {% if feed.isProcessed %}
                                    <span class="badge bg-success">
                                        <i class="fas fa-check-circle me-1"></i> Traité
                                    </span>
                                {% else %}
                                    <span class="badge bg-warning">
                                        <i class="fas fa-clock me-1"></i> En attente
                                    </span>
                                {% endif %}
                            </td>
                            <td>
                                <div class="btn-group">
                                    <a href="{{ path('admin_feed_show', {'id': feed.id}) }}" 
                                       class="btn btn-sm btn-info" 
                                       data-bs-toggle="tooltip" 
                                       title="Voir les détails">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="{{ path('admin_feed_delete', {'id': feed.id}) }}" 
                                       class="btn btn-sm btn-danger" 
                                       onclick="return confirm('Êtes-vous sûr de vouloir supprimer ce message?')"
                                       data-bs-toggle="tooltip" 
                                       title="Supprimer">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                        {% else %}
                        <tr>
                            <td colspan="7" class="text-center py-4">
                                <div class="text-muted">
                                    <i class="fas fa-inbox fa-2x mb-3"></i>
                                    <p class="mb-0">Aucun feedback trouvé</p>
                                </div>
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    $(document).ready(function() {
        // Initialisation des tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        });

        // Initialisation de DataTables
        var table = $('#datatablesSimple').DataTable({
            language: {
                url: '//cdn.datatables.net/plug-ins/1.10.25/i18n/French.json'
            },
            order: [[4, 'desc']], // Trier par date par défaut
            pageLength: 10,
            dom: '<"row"<"col-md-6"l><"col-md-6"f>>rtip'
        });

        // Rafraîchir le tableau
        $('#refreshTable').click(function() {
            location.reload();
        });
    });
</script>
{% endblock %}