{% extends 'backend/indexbackend.html.twig' %}

{% block title %}Edit Rendu{% endblock %}

{% block css %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" />
<link rel="stylesheet" href="{{ asset('css/mdb.min.css') }}" />

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
    }

    .card {
        border: 3px solid #dee2e6 !important;
        border-radius: 12px !important;
        padding: 20px;
        background: white;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
    }

    h1 {
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    .table {
        width: 100%;
        background: white;
        border-radius: 8px;
        overflow: hidden;
    }

    .table th {
        font-weight: 700;
        font-size: 1.2rem;
        background-color: #f1f3f5;
        padding: 15px;
        text-align: left;
    }

    .table td {
        padding: 15px;
        font-size: 1rem;
        border-bottom: 2px solid #dee2e6;
    }

    .table-hover tbody tr:hover {
        background-color: #f1f3f5;
        transform: translateX(5px);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: all 0.3s ease;
    }

    .badge {
        font-size: 1rem;
        padding: 0.6em 1em;
    }

    .avatar-placeholder {
        width: 45px;
        height: 45px;
        background-color: #f0f0f0;
        display: flex;
        align-items: center;
        justify-content: center;
        font-weight: 500;
        border-radius: 50%;
    }

    .btn-primary {
        padding: 0.75rem 1.5rem;
        background: #57b846;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .btn-primary:hover {
        background: #0f6100;
        text-decoration: none;
    }

    .btn-secondary {
        padding: 0.75rem 1.5rem;
        background: #dc3545;
        color: white;
        border: none;
        border-radius: 6px;
        font-size: 1rem;
        cursor: pointer;
        transition: background 0.3s ease;
    }

    .btn-secondary:hover {
        background: #c82333;
    }

    .btn-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .btn-back {
        font-size: 1rem;
        text-decoration: none;
        color: #007bff;
    }

    .btn-back:hover {
        text-decoration: underline;
    }
</style>
{% endblock %}

{% block content %}
<div class="container">
    <div class="card">
        <h1>Edit Rendu</h1>

        {{ include('rendu/_form.html.twig', {'button_label': 'Update'}) }}

        <div class="btn-container">
            <a href="{{ path('app_rendu_index') }}" class="btn-back">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
            {{ include('rendu/_delete_form.html.twig') }}
        </div>
    </div>
</div>
{% endblock %}
