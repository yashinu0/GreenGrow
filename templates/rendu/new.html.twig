{% extends 'backend/indexbackend.html.twig' %}

{% block title %}New Rendu{% endblock %}

{% block css %}
{{ parent() }}
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
<link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" />
<link rel="stylesheet" href="{{ asset('css/mdb.min.css') }}" />

<style>
    body {
        background-color: #f8f9fa;
    }

    .container {
        max-width: 800px;
        margin: 40px auto;
        padding: 20px;
    }

    .card {
        border: 3px solid #dee2e6 !important;
        border-radius: 12px !important;
        padding: 20px;
        background: white;
        box-shadow: 0 4px 10px rgba(0,0,0,0.1);
    }

    h1 {
        font-size: 2rem;
        font-weight: 700;
        text-align: center;
        margin-bottom: 20px;
        color: #333;
    }

    .btn-container {
        display: flex;
        justify-content: space-between;
        margin-top: 20px;
    }

    .btn-primary {
        background: #57b846;
        border: none;
        padding: 12px 20px;
        font-size: 1rem;
        border-radius: 8px;
        transition: background 0.3s ease;
    }

    .btn-primary:hover {
        background: #0f6100;
    }

    .btn-secondary {
        background: #6c757d;
        border: none;
        padding: 12px 20px;
        font-size: 1rem;
        border-radius: 8px;
        text-decoration: none;
        color: white;
        transition: background 0.3s ease;
    }

    .btn-secondary:hover {
        background: #545b62;
    }
</style>
{% endblock %}

{% block content %}
<div class="container">
    <div class="card">
        <h1>Create New Rendu</h1>

        {{ include('rendu/_form.html.twig') }}

        <div class="btn-container">
            <a href="{{ path('app_rendu_index') }}" class="btn btn-secondary">
                <i class="fas fa-arrow-left"></i> Back to list
            </a>
        </div>
    </div>
</div>
{% endblock %}
