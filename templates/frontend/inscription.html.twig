{% extends "base.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block css %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/jquery-steps/1.1.0/jquery.steps.min.css">
    
    <style>
        .wizard h2 {
            display: none;
        }
        .container-form {
            max-width: 800px;
            margin: 50px auto;
            background: #fff;
            padding: 30px;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.1);
        }

        .input-wrapper {
            position: relative;
            margin: 15px 0;
        }

        .input-wrapper i {
            position: absolute;
            left: 15px;
            top: 50%;
            transform: translateY(-50%);
            color: #666;
        }

        .icon-left {
            padding-left: 40px !important;
            height: 45px;
            width: 100%;
            border: 2px solid #e0e0e0;
            border-radius: 5px;
            font-size: 16px;
            transition: all 0.3s ease;
        }

        .icon-left:focus {
            border-color: #30880D;
            box-shadow: 0 0 5px rgba(52,152,219,0.3);
        }

        .password-match-error {
            color: #dc3545;
            font-size: 0.875em;
            display: none;
        }
        a {
            color: #30880D;
        }
         .btn-custom {
            background-color: #30880D;
            border-color: #30880D;
            color:black;
        }
        .btn-custom:hover {
            background-color:rgb(45, 156, 1);
            border-color: #266a0a;
        }
         #utilisateur_role_user{
            display: none;

        }
        .required
        {
            display: none;
        }
        .send {
    background-color: #28a745; /* Vert pour correspondre au thème */
    color: white;
    border: none;
    padding: 5px 10px;
    border-radius: 5px;
    cursor: pointer;
}

.send:hover {
    background-color: #218838;
}
    </style>
{% endblock %}

{% block section %}
<div class="container-form">
    {{ form_start(form, {'attr': {'id': 'signup-form'}}) }}
    
    <!-- Étape 1 -->
    <h2>Informations personnelles</h2>
    <section>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.nom_user) }}
                <div class="input-wrapper">
                    <i class="fas fa-user"></i>
                    {{ form_widget(form.nom_user, {'attr': {'class': 'form-control icon-left', 'placeholder': 'Exemple : Dupont'}}) }}
                    {{ form_errors(form.nom_user) }}
                </div>
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.prenom_user) }}
                <div class="input-wrapper">
                    <i class="fas fa-user-tag"></i>
                    {{ form_widget(form.prenom_user, {'attr': {'class': 'form-control icon-left', 'placeholder': 'Exemple : Marie'}}) }}
                    {{ form_errors(form.prenom_user) }}
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.Telephone_user) }}
                <div class="input-wrapper">
                    <i class="fas fa-phone"></i>
                    {{ form_widget(form.Telephone_user, {'attr': {'class': 'form-control icon-left', 'placeholder': 'Exemple : 25 845 846'}}) }}
                    {{ form_errors(form.Telephone_user) }}
                </div>
            </div>
        </div>
    </section>

    <!-- Étape 2 -->
    <h2>Adresse</h2>
    <section>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.Adresse_user) }}
                <div class="input-wrapper">
                    <i class="fas fa-map-marker-alt"></i>
                    {{ form_widget(form.Adresse_user, {'attr': {'class': 'form-control icon-left', 'placeholder': 'Exemple : 123 rue de Paris'}}) }}
                    {{ form_errors(form.Adresse_user) }}
                </div>
            </div>
            <div class="col-md-6 mb-3">
                {{ form_label(form.Ville_user) }}
                <div class="input-wrapper">
                    <i class="fas fa-city"></i>
                    {{ form_widget(form.Ville_user, {'attr': {'class': 'form-control icon-left', 'placeholder': 'Exemple : Paris'}}) }}
                    {{ form_errors(form.Ville_user) }}
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.Code_postal_user) }}
                <div class="input-wrapper">
                    <i class="fas fa-mail-bulk"></i>
                    {{ form_widget(form.Code_postal_user, {'attr': {'class': 'form-control icon-left', 'placeholder': 'Exemple : 75001'}}) }}
                    {{ form_errors(form.Code_postal_user) }}
                </div>
            </div>
        </div>
    </section>

    <!-- Étape 3 -->
    <h2>Connexion</h2>
    <section>
        <div class="form-row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.email_user) }}
                <div class="input-wrapper">
                    <i class="fas fa-envelope"></i>
                    {{ form_widget(form.email_user, {'attr': {'class': 'form-control icon-left', 'placeholder': 'Exemple : votre@email.com'}}) }}
                    {{ form_errors(form.email_user) }}
                </div>
            </div>
        </div>

        <div class="form-row">
            <div class="col-md-6 mb-3">
                {{ form_label(form.mot_de_passe_user) }}
                <div class="input-wrapper">
                    <i class="fas fa-lock"></i>
                    {{ form_widget(form.mot_de_passe_user, {'attr': {'class': 'form-control icon-left', 'placeholder': 'Exemple : ********'}}) }}
                    {{ form_errors(form.mot_de_passe_user) }}
                </div>
            </div>
           
                <div class="password-match-error mt-1">Les mots de passe ne correspondent pas</div>
            </div>
        </div>
    </section>

   
    <br>
    

    {{ form_end(form) }}
</div>
{% endblock %}

{% block js %}
    {{ parent() }}
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-steps/1.1.0/jquery.steps.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>

    <script>
    $(document).ready(function () {
        var form = $("#signup-form");

        form.steps({
            headerTag: "h2",
            bodyTag: "section",
            transitionEffect: "fade",
            autoFocus: true,
            labels: {
                next: "Suivant",
                previous: "Précédent"
            },
            onStepChanging: function (event, currentIndex, newIndex) {
                return true;
            },
            onFinishing: function (event, currentIndex) {
                return true;
            },
            onFinished: function (event, currentIndex) {
                    form.submit(); // Ajoute cette ligne pour soumettre le formulaire

            }
        });
    });
    </script>
{% endblock %}